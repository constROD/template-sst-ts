{
  "name": "template-sst-ts",
  "version": "0.0.0",
  "repository": "https://github.com/constrod/template-sst-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-sst-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for SST TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build ",
    "remove": "sst remove",
    "secrets": "sst secrets",
    "release": "changeset tag",
    "test": "sst bind \"vitest --single-thread\"",
    "core:test": "pnpm --filter=core run test",
    "core:generate": "pnpm --filter=core prisma:migrate:generate",
    "core:deploy": "pnpm --filter=core prisma:migrate:deploy",
    "core:dev": "pnpm --filter=core prisma:migrate:dev",
    "core:reset": "pnpm --filter=core prisma:migrate:reset",
    "core:secrets": "pnpm secrets load packages/core/.env",
    "format": "prettier --write .",
    "lint": "eslint ./stacks --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./stacks --fix --ext .js,.ts,.jsx,.tsx",
    "lint:types": "tsc --noEmit",
    "lint:spell": "git diff --cached --name-only | npx cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "lint:all": "concurrently \"pnpm lint\" \"pnpm lint:types\" \"pnpm lint:spell\"",
    "ci:lint": "pnpm recursive run lint:all",
    "ci:test": "sst bind \"vitest --single-thread --coverage\"",
    "pre-commit": "concurrently \"lint-staged --allow-empty\" \"pnpm lint:spell\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@tsconfig/node16": "^1.0.3",
    "@vitest/coverage-c8": "^0.31.0",
    "aws-cdk-lib": "2.79.1",
    "concurrently": "^8.0.1",
    "constructs": "10.1.156",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-base": "workspace:*",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sst": "2.10.4",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1"
  }
}
