{
  "name": "lib",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test": "sst bind vitest",
    "format": "prettier --write ./src/**/*.ts{,x}",
    "lint": "eslint ./src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint ./src --fix --ext .js,.ts,.jsx,.tsx",
    "lint:types": "tsc --noEmit",
    "lint:spell": "git diff --cached --name-only | npx cspell --config ../../cspell.json --no-summary --no-progress --no-must-find-files --file-list stdin",
    "lint:all": "concurrently \"pnpm lint\" \"pnpm lint:types\" \"pnpm lint:spell\""
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/node": "^18.16.1",
    "eslint-config-base": "workspace:*",
    "sst": "^2.7.2",
    "vitest": "^0.30.1"
  }
}
