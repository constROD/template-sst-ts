{
  "extends": "@tsconfig/node16/tsconfig.json",
  "exclude": ["./node_modules", "./packages"],
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@core/*": ["./packages/core/src/*"]
    }
  }
}
